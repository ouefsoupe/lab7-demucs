# Base image supports Nvidia CUDA but does not require it and can also run demucs on the CPU
FROM nvidia/cuda:12.6.2-base-ubuntu22.04

USER root
ENV TORCH_HOME=/data/models
ENV OMP_NUM_THREADS=1

# Install required tools
RUN apt update && apt install -y --no-install-recommends \
    ffmpeg \
    git \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Clone Demucs
RUN git clone --single-branch --branch main https://github.com/adefossez/demucs /lib/demucs
WORKDIR /lib/demucs

# Checkout known stable commit on main
RUN git checkout b9ab48cad45976ba42b2ff17b229c071f0df9390

# Install Demucs + torch stack
RUN python3 -m pip install -e . "torch<2" "torchaudio<2" "numpy<2" --no-cache-dir

# Install worker dependencies
RUN python3 -m pip install --no-cache-dir minio redis requests

# ---- Worker app setup ----
# Switch to /app and copy your worker code
WORKDIR /app
COPY worker/worker.py /app/worker.py

# Volumes (optional, fine to keep)
VOLUME /data/input
VOLUME /data/output
VOLUME /data/models

# Override the demucs base ENTRYPOINT so we actually run the worker
ENTRYPOINT []
CMD ["python3", "-u", "worker.py"]
